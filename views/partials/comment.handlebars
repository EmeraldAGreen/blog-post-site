<div class="comments">
    {{#each comments as |comment|}}
    <div class="card">
        <h3 class="card-header"></h3>
        <section class="comment card-body">
            <div class="text">
                {{comment}}
            </div>
            <div class="card-footer">
                {{user.name}}, {{format_date date_created}}
            </div>
        </section>
    </div>
    {{/each}}
</div>