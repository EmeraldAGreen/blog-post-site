<div class="card">
  <div class="card-body">
    <h2 class="card-header">Add a Blog Post:</h2>

    <form id="blog-form" class="blog-form">
      <div class="form-group">
        <label for="name">Blog Name:</label>
        <input class="form-input" type="text" id="blog-name" />
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <input class="form-input" type="text" id="blog-description" />
      </div>
      <div class="form-group">
        <button class="blog-form btn btn-info btn-lg" type="submit"><a class="link" href="/dashboard">Add Blog Post</a></button>
      </div>
    </form>
  </div>
</div>

<script src="/js/blog.js"></script>