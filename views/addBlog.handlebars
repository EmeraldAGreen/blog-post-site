<div class="card">
  <div class="card-body">
    <h2 class="card-header">Add a Blog Post:</h2>

    <form class="form create-blog-form">
      <div class="form-group">
        <label for="name">Blog Name:</label>
        <input class="form-input" type="text" id="blog-name" />
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <input class="form-input" type="text" id="blog-description" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-lg" type="submit">Add Blog Post</button>
      </div>
    </form>
  </div>
</div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Your Blogs:</h3>

    {{#each blog as |blogs|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogs/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


<script src="../public/js/blog.js"></script>