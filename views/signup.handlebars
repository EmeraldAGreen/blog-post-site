<div class="card">
  <div class="card-body">
    <h2 class="card-header">Sign Up</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="user-signup">Username:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-lg" type="submit">Sign Up</button>
      </div>
      <a class="signup-link" href="/login">Login instead</a>
    </form>
  </div>
</div>

<script src="./js/signup.js"></script>